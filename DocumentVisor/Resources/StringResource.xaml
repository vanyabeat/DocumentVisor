<ResourceDictionary 
    xmlns ="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <!--BEGIN GUI STRING-->
    <system:String x:Key="ApplicationName">DocumentVisor</system:String>
    <system:String x:Key="Queries">Queries</system:String>
    <system:String x:Key="Persons">Persons</system:String>
    <system:String x:Key="PersonTypes">Person Types</system:String>
    <system:String x:Key="Themes">Themes</system:String>
    <system:String x:Key="Privacies">Privacies</system:String>
    <system:String x:Key="DocumentTypes">Doc Types</system:String>
    <system:String x:Key="Insert">Insert</system:String>
    <system:String x:Key="Delete">Delete</system:String>
    <system:String x:Key="Complete">Complete</system:String>
    <system:String x:Key="SelectTab">Select Tab in upper menu</system:String>
    <system:String x:Key="ObjectNotFound">Object not found</system:String>
    <system:String x:Key="PersonTypeNeedSelect">Need select person type</system:String>
    <system:String x:Key="Response">Response</system:String>
    <!--END GUI STRING-->
    <!--QUERY-->
    <system:String x:Key="QueryGuid">GUID</system:String>
    <system:String x:Key="QueryName">Name</system:String>
    <system:String x:Key="QueryInfo">Info</system:String>
    <system:String x:Key="QueryDocumentType">DocType</system:String>
    <system:String x:Key="QueryPrivacy">Privacy</system:String>
    <system:String x:Key="QuerySignPerson">SignPerson</system:String>
    <system:String x:Key="QueryExecutorPerson">ExecPerson</system:String>
    <system:String x:Key="QueryInnerExectutorPersons">InnerExecPersons</system:String>
    <system:String x:Key="QueryHasCd">HasCD</system:String>
    <system:String x:Key="QueryDate">Date</system:String>
    <system:String x:Key="QueryDocumentNum">DocNum</system:String>
    <system:String x:Key="QuerySecretaryDate">SecDate</system:String>
    <system:String x:Key="QueryInnerNum">InnerNum</system:String>
    <system:String x:Key="QueryCentralSecretaryDate">CSecDate</system:String>
    <system:String x:Key="QueryDivision">Division</system:String>
    <!--END QUERY-->
    <!--PERSON-->
    <system:String x:Key="PersonName">Name</system:String>
    <system:String x:Key="PersonInfo">Info</system:String>
    <system:String x:Key="PersonType">PersonType</system:String>
    <system:String x:Key="PersonPhone">Phone</system:String>
    <system:String x:Key="PersonNotExist">Person not exist</system:String>
    <system:String x:Key="PersonDeleted">Good! Successful delete Person</system:String>
    <system:String x:Key="PersonEdited">Good! Successful edit Person</system:String>
    <!--END PERSON-->
    <!--PERSONTYPE-->
    <system:String x:Key="PersonTypeName">PT Name</system:String>
    <system:String x:Key="PersonTypeInfo">PT Info</system:String>
    <system:String x:Key="PersonTypeNotExist">PersonType not exist</system:String>
    <system:String x:Key="PersonTypeDeleted">Good! Successful delete PersonType</system:String>
    <system:String x:Key="PersonTypeEdited">Good! Successful edit PersonType</system:String>
    <system:String x:Key="PersonTypeDeleteError">Fail! Maybe PersonType use in Persons</system:String>
    <!--END PERSONTYPE-->

    <Style TargetType="DataGrid">
        <!-- Make the border and grid lines a little less imposing -->
        <Setter Property="BorderBrush" Value="#DDDDDD" />
        <Setter Property="HorizontalGridLinesBrush" Value="#DDDDDD" />
        <Setter Property="VerticalGridLinesBrush" Value="#DDDDDD" />

        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <!-- Highlight a grid row as the mouse passes over -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightCyan" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="CellStyle">
            <Setter.Value>
                <Style TargetType="DataGridCell">
                    <Style.Triggers>
                        <!-- Highlight selected rows -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#ff66ccff" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="Foreground" Value="Black" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Background" Value="#ff66ccff" />
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Foreground" Value="Black" />
                        </Trigger>
                    </Style.Triggers>
                    <!-- Add some padding around the contents of a cell -->
                    <Setter Property="Padding" Value="4,3,4,3" />
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Background="{TemplateBinding Background}">
                                    <ContentPresenter />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FocusVisualStyle">
                        <Setter.Value>
                            <Style TargetType="Control">
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>