                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="0.1*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Syncfusion:SfDataGrid Grid.Row="0" x:Name="QueriesDataGrid"
                                           AutoGenerateColumns="False"
                                           AllowFiltering="True"
                                           ItemsSource="{Binding AllQueries}" >

                        <Syncfusion:SfDataGrid.Columns>
                            <Syncfusion:GridTextColumn MappingName="Name"/>
                            <Syncfusion:GridTextColumn MappingName="Info"/>
                            <Syncfusion:GridTextColumn MappingName="Guid"/>
                            <Syncfusion:GridTextColumn MappingName="Privacy.Name"/>
                            <Syncfusion:GridTextColumn MappingName="Division.Name"/>
                            <Syncfusion:GridTextColumn MappingName="SignPerson.Name"/>
                            <Syncfusion:GridTextColumn MappingName="LinkedPersons"/>
                            <Syncfusion:GridTextColumn MappingName="Type.Name"/>
                            <Syncfusion:GridDateTimeColumn MappingName="OuterSecretaryDateTime"/>
                            <Syncfusion:GridTextColumn MappingName="OuterSecretaryNumber"/>
                            <Syncfusion:GridDateTimeColumn MappingName="InnerSecretaryDateTime"/>
                            <Syncfusion:GridTextColumn MappingName="InnerSecretaryNumber"/>
                            <Syncfusion:GridDateTimeColumn MappingName="CentralSecretaryDateTime"/>
                            <Syncfusion:GridTextColumn MappingName="CentralSecretaryNumber"/>
                            <Syncfusion:GridCheckBoxColumn MappingName="IsCd"/>
                            <Syncfusion:GridCheckBoxColumn MappingName="Various"/>
                            <Syncfusion:GridCheckBoxColumn MappingName="Empty"/>
                            <Syncfusion:GridTextColumn MappingName="LinkedArticles"/>
                            <Syncfusion:GridTextColumn MappingName="LinkedActions"/>
                            <Syncfusion:GridTextColumn MappingName="LinkedThemes"/>
                        </Syncfusion:SfDataGrid.Columns>
                    </Syncfusion:SfDataGrid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button HorizontalAlignment="Center" Content="{StaticResource Insert}"
                                CommandParameter="{Binding ElementName=DocumentVisorWindow}"
                                Command="{Binding OpenAddQueryWnd}" Margin="0,10,0,10" Width="160"/>
                        <Button Grid.Column="1" HorizontalAlignment="Center" Content="{StaticResource ExportToExcel}"  CommandParameter="{Binding ElementName=DocumentVisorWindow}"
                                Command="{Binding ExportToExcel}" Margin="0,10,0,10" Width="160"></Button>
                        <Button Grid.Column="2" HorizontalAlignment="Center" Content="{StaticResource Delete}"></Button>
                    </Grid>
                </Grid>
            </TabItem>
